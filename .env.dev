# Development Environment Variables for Adakings Frontend
# For Railway development deployment

# React Environment Settings
FAST_REFRESH=true
GENERATE_SOURCEMAP=false
SKIP_PREFLIGHT_CHECK=true
ESLINT_NO_DEV_ERRORS=true
TSC_COMPILE_ON_ERROR=true

# Railway Development Settings
HOST=0.0.0.0
PORT=$PORT

# File watching optimizations (for dev environment)
CHOKIDAR_USEPOLLING=true
CHOKIDAR_INTERVAL=2000
WATCHPACK_POLLING=true

# API Configuration - Railway Dev Backend
REACT_APP_API_BASE_URL=$REACT_APP_DEV_API_URL/api
REACT_APP_BACKEND_BASE_URL=$REACT_APP_DEV_API_URL

# Environment identification
REACT_APP_ENVIRONMENT=development
REACT_APP_NODE_ENV=development

# Security settings for Railway
REACT_APP_ENFORCE_HTTPS=true

# Debug settings - FULL debugging like local
REACT_APP_DEBUG_MODE=true
REACT_APP_ENABLE_LOGS=true

# Development Tools - same as local
ENABLE_SWAGGER_UI=true
ENABLE_REDOC=true
ENABLE_DEBUG_TOOLBAR=true
ENABLE_DJANGO_EXTENSIONS=true

# Development Utilities
REACT_APP_DISABLE_LIVE_RELOAD=false
REACT_APP_POLLING_INTERVAL=2000

# Development Specific Features
DEV_MODE=true
ENABLE_LOCAL_SERVICES=false
USE_DUMMY_DATA=false
