# Production Environment Variables for Adakings Frontend
# For Railway production deployment

# React Environment Settings
FAST_REFRESH=false
GENERATE_SOURCEMAP=false
SKIP_PREFLIGHT_CHECK=true

# Railway Production Settings
HOST=0.0.0.0
PORT=$PORT

# API Configuration - Railway Prod Backend
REACT_APP_API_BASE_URL=$REACT_APP_PROD_API_URL/api
REACT_APP_BACKEND_BASE_URL=$REACT_APP_PROD_API_URL

# Environment identification
REACT_APP_ENVIRONMENT=production
REACT_APP_NODE_ENV=production

# Security settings for production
REACT_APP_ENFORCE_HTTPS=true

# Debug settings - disabled for production
REACT_APP_DEBUG_MODE=false
REACT_APP_ENABLE_LOGS=false

# Performance settings - optimized for production
REACT_APP_POLLING_INTERVAL=5000
