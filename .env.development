# React Development Environment Optimizations
# Reduce auto-reload frequency and improve performance

# Fast Refresh optimizations
FAST_REFRESH=true
HOST=0.0.0.0
PORT=3000
WDS_SOCKET_HOST=localhost
WDS_SOCKET_PORT=3000
WDS_SOCKET_PATH=/ws

# Reduce file watching intensity - use polling for better Windows performance
CHOKIDAR_USEPOLLING=true
CHOKIDAR_INTERVAL=1000

# Webpack optimizations for development - maximize speed
GENERATE_SOURCEMAP=false
SKIP_PREFLIGHT_CHECK=true
ESLINT_NO_DEV_ERRORS=true
TSC_COMPILE_ON_ERROR=true

# Performance optimizations - much faster refresh
REACT_APP_DISABLE_LIVE_RELOAD=false
REACT_APP_POLLING_INTERVAL=2000
WATCHPACK_POLLING=true

# Browser compatibility
BROWSER=none
REACT_APP_ENFORCE_HTTPS=false
